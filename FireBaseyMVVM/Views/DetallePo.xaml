            <StackLayout>
                <Button Text="Eliminar"
                            BackgroundColor="#5adf77"
                            CornerRadius="30"
                            FontAttributes="Bold"
                            Margin="-5,0,0,0"
                            Command="{Binding ComEliPo}"/>

                <Button Text="Editar"
                            BackgroundColor="#5adf77"
                            CornerRadius="30"
                            FontAttributes="Bold"
                            Margin="-5,0,0,0"
                            Command="{Binding ComIrAct}"
                            CommandParameter="{Binding parametrosRe}"/>


